<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:text="Find the Dog"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/card_question_image_view_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/card_question_image_view_1"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_weight="5"
        android:contentDescription="@string/content_logo_description"
        android:scaleType="centerCrop"
        android:src="@drawable/enunny_logo"
        app:layout_constraintBottom_toTopOf="@+id/card_question_image_view_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/card_question_image_view_2"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/card_question_image_view_2"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_weight="5"
        android:contentDescription="@string/content_logo_description"
        android:scaleType="centerCrop"
        android:src="@drawable/enunny_logo"
        app:layout_constraintBottom_toTopOf="@+id/card_question_image_view_4"
        app:layout_constraintEnd_toStartOf="@+id/card_question_image_view_1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/card_question_image_view_3"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="5"
        android:contentDescription="@string/content_logo_description"
        android:scaleType="centerCrop"
        android:src="@drawable/enunny_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/card_question_image_view_4"
        app:layout_constraintTop_toBottomOf="@+id/card_question_image_view_1" />

    <ImageView
        android:id="@+id/card_question_image_view_4"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/content_logo_description"
        android:scaleType="centerCrop"
        android:src="@drawable/enunny_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/card_question_image_view_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_question_image_view_2" />

</android.support.constraint.ConstraintLayout>
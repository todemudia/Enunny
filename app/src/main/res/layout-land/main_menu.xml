<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding = "16dp">


        <Button
            android:id="@+id/settings_button_main_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_button_main_menu" />

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:scaleType="center"
            android:layout_below="@id/settings_button_main_menu"
            android:src= "@drawable/ic_launcher_foreground"
            />

        <Button
            android:id="@+id/play_button_main_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/play_button_main_menu"
            android:layout_alignBottom="@id/story_button_main_menu"/>

        <Button
            android:id="@+id/story_button_main_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/story_button_main_menu"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/lullaby_button_main_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lullaby_button_main_menu"
            android:layout_alignBottom="@id/story_button_main_menu"/>

</RelativeLayout>